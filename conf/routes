# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home Page
GET     /                           controllers.HomeController.index
GET     /index                      controllers.HomeController.index

# Login Page
GET     /login                      controllers.AuthenticationController.login(originOpt: Option[String] ?= None)

# Authenticate
POST    /authenticate               controllers.AuthenticationController.authenticate(originOpt: Option[String] ?= None)

# Map static secured assets that require validation
GET     /secured/assets/*file       controllers.SecuredAssets.versioned(path="/secured", file: Asset)
GET     /secured/*file              controllers.SecuredAssets.versioned(path="/secured/views", file: Asset)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /*file                      controllers.Assets.versioned(path="/public/views", file: Asset)